<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.maury.csv.CapturaImagen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="GESTIONAR IMAGEN"
            android:textAlignment="center"
            android:textSize="25sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/archivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagemId"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_below="@+id/textView"

            android:layout_marginTop="50dp"
            android:src="@drawable/img_base" />

        <Button
            android:id="@+id/btnCargarImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondo"
            android:onClick="onclick"
            android:text="Tomar  Imagen"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btnPlanta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondo"
            android:onClick="nuevaplanta"
            android:text="Nueva Planta"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btnConstrccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondo"
            android:onClick="nuevaconstruccion"
            android:text="Nueva Costruccion"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btnConcluir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondo"
            android:onClick="terminado"
            android:text="proceso terminado"
            android:textColor="#ffff" />
    </LinearLayout>

</RelativeLayout>
